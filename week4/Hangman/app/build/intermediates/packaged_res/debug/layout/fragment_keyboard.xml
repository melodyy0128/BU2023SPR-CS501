<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KeyboardFragment">


    <TextView
        android:id="@+id/chooseLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_letter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/a"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="@string/a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />


    <Button
        android:id="@+id/b"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="B"
        app:layout_constraintStart_toEndOf="@id/a"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />

    <Button
        android:id="@+id/c"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="C"
        app:layout_constraintStart_toEndOf="@id/b"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />


    <Button
        android:id="@+id/d"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="D"
        app:layout_constraintStart_toEndOf="@id/c"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />

    <Button
        android:id="@+id/e"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="E"
        app:layout_constraintStart_toEndOf="@id/d"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />

    <Button
        android:id="@+id/f"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="F"
        app:layout_constraintStart_toEndOf="@id/e"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />

    <Button
        android:id="@+id/g"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="G"
        app:layout_constraintStart_toEndOf="@id/f"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />

    <Button
        android:id="@+id/h"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="H"
        app:layout_constraintStart_toEndOf="@id/g"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />

    <Button
        android:id="@+id/i"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="I"
        app:layout_constraintStart_toEndOf="@id/h"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />

    <Button
        android:id="@+id/j"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="J"
        app:layout_constraintStart_toEndOf="@id/i"
        app:layout_constraintTop_toBottomOf="@+id/chooseLetter" />

    <Button
        android:id="@+id/k"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="K"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a" />

    <Button
        android:id="@+id/l"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="L"
        app:layout_constraintStart_toEndOf="@id/k"
        app:layout_constraintTop_toBottomOf="@+id/a" />

    <Button
        android:id="@+id/m"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="M"
        app:layout_constraintStart_toEndOf="@id/l"
        app:layout_constraintTop_toBottomOf="@+id/a" />


    <Button
        android:id="@+id/n"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="N"
        app:layout_constraintStart_toEndOf="@id/m"
        app:layout_constraintTop_toBottomOf="@+id/a" />

    <Button
        android:id="@+id/o"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="O"
        app:layout_constraintStart_toEndOf="@id/n"
        app:layout_constraintTop_toBottomOf="@+id/a" />

    <Button
        android:id="@+id/p"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="P"
        app:layout_constraintStart_toEndOf="@id/o"
        app:layout_constraintTop_toBottomOf="@+id/a" />
    <Button
        android:id="@+id/q"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Q"
        app:layout_constraintStart_toEndOf="@id/p"
        app:layout_constraintTop_toBottomOf="@+id/a" />
    <Button
        android:id="@+id/r"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="R"
        app:layout_constraintStart_toEndOf="@id/q"
        app:layout_constraintTop_toBottomOf="@+id/a" />
    <Button
        android:id="@+id/s"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="S"
        app:layout_constraintStart_toEndOf="@id/r"
        app:layout_constraintTop_toBottomOf="@+id/a" />
    <Button
        android:id="@+id/t"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="T"
        app:layout_constraintStart_toEndOf="@id/s"
        app:layout_constraintTop_toBottomOf="@+id/a" />

    <Button
        android:id="@+id/u"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="U"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/k" />

    <Button
        android:id="@+id/v"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="V"
        app:layout_constraintStart_toEndOf="@id/u"
        app:layout_constraintTop_toBottomOf="@+id/k" />

    <Button
        android:id="@+id/w"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="W"
        app:layout_constraintStart_toEndOf="@id/v"
        app:layout_constraintTop_toBottomOf="@+id/k" />

    <Button
        android:id="@+id/x"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="X"
        app:layout_constraintStart_toEndOf="@id/w"
        app:layout_constraintTop_toBottomOf="@+id/k" />

    <Button
        android:id="@+id/y"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="y"
        app:layout_constraintStart_toEndOf="@id/x"
        app:layout_constraintTop_toBottomOf="@+id/k" />

    <Button
        android:id="@+id/z"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Z"
        app:layout_constraintStart_toEndOf="@id/y"
        app:layout_constraintTop_toBottomOf="@+id/k" />



</androidx.constraintlayout.widget.ConstraintLayout>